<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ddb993"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:text="@string/denumireCarte"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

        <EditText
            android:id="@+id/etDenumireCarte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:text="@string/autorCarte"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

        <EditText
            android:id="@+id/etAutorCarte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:text="@string/categorieCarte"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" />

        <Spinner
            android:id="@+id/spinnerCategorieCarte"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.7"
            android:entries="@array/genuri"/>
    </LinearLayout>

    <RatingBar
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ratingBarCarte"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RatingBar"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="3"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btnAdauga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/adaugaCarteButtonText"
            android:textColor="#ddb993"
            android:background="@drawable/button_main"
            android:layout_weight="1"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>



</LinearLayout>